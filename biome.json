{
	"$schema": "https://biomejs.dev/schemas/1.2.2/schema.json",
  "files": {
    "ignore": [".nuxt/*"]
  },
	"organizeImports": {
		"enabled": true
	},
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": false
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    },
    "ignore": ["src/vendor/**/*", "bower_components/**/*"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
